-- Mys2 Hub - Full Enhanced Script for Steal a Brainrot

--// Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local Workspace = game:GetService("Workspace")
local TeleportService = game:GetService("TeleportService")
local StarterGui = game:GetService("StarterGui")
local HttpService = game:GetService("HttpService")
local LocalPlayer = Players.LocalPlayer

--// GUI Setup
local screenGui = Instance.new("ScreenGui", game.CoreGui)
screenGui.Name = "Mys2Hub"

local mainFrame = Instance.new("Frame", screenGui)
mainFrame.Size = UDim2.new(0, 240, 0, 300)
mainFrame.Position = UDim2.new(0, 10, 0, 100)
mainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true

local uiList = Instance.new("UIListLayout", mainFrame)
uiList.Padding = UDim.new(0, 4)

local function addButton(name, callback)
    local button = Instance.new("TextButton", mainFrame)
    button.Size = UDim2.new(1, -10, 0, 30)
    button.Position = UDim2.new(0, 5, 0, 0)
    button.Text = name
    button.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    button.TextColor3 = Color3.new(1, 1, 1)
    button.BorderSizePixel = 0
    button.MouseButton1Click:Connect(function()
        callback(button)
    end)
end

--// Speed Boost
local speedEnabled = false
function setSpeed(value)
    local char = LocalPlayer.Character
    if char and char:FindFirstChild("Humanoid") then
        char.Humanoid.WalkSpeed = value
    end
end

function hookWalkSpeed()
    LocalPlayer.CharacterAdded:Connect(function(char)
        char:WaitForChild("Humanoid").WalkSpeed = speedEnabled and 32 or 16
    end)
end

function startSpeedEnforcement()
    RunService.Stepped:Connect(function()
        if speedEnabled then
            setSpeed(32)
        end
    end)
end

--// ESP Setup
local espMythicEnabled = false
local espBrainrotEnabled = false
local espPlayerEnabled = false

local mythics = {
    ["Frigo Camelo"] = {"1.2K", "300K"},
    ["Orangutini Ananassini"] = {"1.7K", "400K"},
    ["Rhino Toasterino"] = {"2.1K", "450K"},
    ["Bombardiro Crocodilo"] = {"2.5K", "500K"},
    ["Bombombini Gusini"] = {"5K", "1M"},
    ["Cavallo Virtuoso"] = {"7.5K", "2.5M"},
    ["Spioniro Golubiro"] = {"3.5K", "750K"},
    ["Zibra Zubra Zibralini"] = {"6K", "1M"},
    ["Tigrilini Watermelini"] = {"7.5K", "1M"},
}

local brainrots = {
    ["Cocofanto Elefanto"] = {"10K", "5M"},
    ["Girafa Celestre"] = {"20K", "7.5M"},
    ["Gattatino Neonino"] = {"35K", "7.5M"},
    ["Matteo"] = {"50K", "10M"},
    ["Tralalero Tralala"] = {"50K", "10M"},
    ["Espresso Signora"] = {"70K", "25M"},
    ["Odin Din Din Dun"] = {"75K", "15M"},
    ["Statutino Libertino"] = {"75K", "20M"},
    ["Trenostruzzo Turbo 3000"] = {"150K", "25M"},
    ["Ballerino Lololo"] = {"200K", "35M"},
    ["Tigroligre Frutonni"] = {"60K", "15M"},
    ["Orcalero Orcala"] = {"100K", "15M"},
}

local function createESP(model, color, info)
    if not model:FindFirstChild("PrimaryPart") then return end

    local highlight = Instance.new("Highlight", model)
    highlight.FillColor = color
    highlight.FillTransparency = 0.4
    highlight.OutlineColor = Color3.new(1, 1, 1)

    local billboard = Instance.new("BillboardGui", model)
    billboard.Adornee = model.PrimaryPart
    billboard.Size = UDim2.new(0, 200, 0, 50)
    billboard.AlwaysOnTop = true
    billboard.Name = "ESPInfo"

    local text = Instance.new("TextLabel", billboard)
    text.Size = UDim2.new(1, 0, 1, 0)
    text.BackgroundTransparency = 1
    text.TextColor3 = color
    text.Font = Enum.Font.GothamBold
    text.TextScaled = true
    text.Text = info
end

RunService.RenderStepped:Connect(function()
    for _, obj in pairs(Workspace:GetChildren()) do
        if obj:IsA("Model") and obj.PrimaryPart and not obj:FindFirstChild("ESPInfo") then
            local name = obj.Name
            if espMythicEnabled and mythics[name] then
                createESP(obj, Color3.fromRGB(0, 255, 255), name .. "\\n" .. mythics[name][1] .. "/sec - " .. mythics[name][2])
            elseif espBrainrotEnabled and brainrots[name] then
                createESP(obj, Color3.fromRGB(0, 0, 255), name .. "\\n" .. brainrots[name][1] .. "/sec - " .. brainrots[name][2])
            end
        end
    end

    if espPlayerEnabled then
        for _, p in pairs(Players:GetPlayers()) do
            if p ~= LocalPlayer and p.Character and not p.Character:FindFirstChild("ESPPlayer") then
                local highlight = Instance.new("Highlight", p.Character)
                highlight.Name = "ESPPlayer"
                highlight.FillColor = Color3.fromRGB(255, 255, 0)
                highlight.OutlineColor = Color3.fromRGB(255, 255, 255)
            end
        end
    end
end)

--// Fling to Corner
addButton("Fling to Corner", function()
    local root = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
    if root then
        root.Velocity = Vector3.new(999, 999, 999)
        root.CFrame = CFrame.new(9999, 999, 9999)
    end
end)

--// GUI Buttons
addButton("Speed Boost", function(btn)
    speedEnabled = not speedEnabled
    btn.Text = "Speed Boost: " .. (speedEnabled and "ON" or "OFF")
    if speedEnabled then
        setSpeed(32)
        hookWalkSpeed()
        startSpeedEnforcement()
    else
        setSpeed(16)
    end
end)

addButton("Toggle Mythic ESP", function(btn)
    espMythicEnabled = not espMythicEnabled
    btn.Text = "Mythic ESP: " .. (espMythicEnabled and "ON" or "OFF")
end)

addButton("Toggle Brainrot ESP", function(btn)
    espBrainrotEnabled = not espBrainrotEnabled
    btn.Text = "Brainrot ESP: " .. (espBrainrotEnabled and "ON" or "OFF")
end)

addButton("Toggle Player ESP", function(btn)
    espPlayerEnabled = not espPlayerEnabled
    btn.Text = "Player ESP: " .. (espPlayerEnabled and "ON" or "OFF")
end)

--// Discord Button
addButton("Join Discord", function()
    setclipboard("https://discord.gg/brainrots")
    StarterGui:SetCore("SendNotification", {
        Title = "Copied!",
        Text = "Copied Discord invite to clipboard. You can now close this window.",
        Duration = 5
    })
end)
