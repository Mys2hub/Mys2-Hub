-- Mys2 Hub - Enhanced Full Script for "Steal a Brainrot"

--// Services
local Players, RunService, Workspace, StarterGui, HttpService = game:GetService("Players"), game:GetService("RunService"), game:GetService("Workspace"), game:GetService("StarterGui"), game:GetService("HttpService")
local LocalPlayer = Players.LocalPlayer

--// GUI INIT
local function createGui(name, size, pos)
    local gui = Instance.new("ScreenGui", game.CoreGui)
    gui.Name = name
    local frame = Instance.new("Frame", gui)
    frame.Size = UDim2.new(0, size.X, 0, size.Y)
    frame.Position = UDim2.new(0, pos.X, 0, pos.Y)
    frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    frame.BorderSizePixel = 0
    frame.Active = true
    frame.Draggable = true
    local list = Instance.new("UIListLayout", frame)
    list.Padding = UDim.new(0, 4)
    list.FillDirection = Enum.FillDirection.Vertical
    list.HorizontalAlignment = Enum.HorizontalAlignment.Center
    list.VerticalAlignment = Enum.VerticalAlignment.Top
    return gui, frame
end

local mainGui, mainFrame = createGui("Mys2Main", Vector2.new(250, 350), Vector2.new(10, 100))
local flingGui, flingFrame = createGui("Mys2Fling", Vector2.new(150, 60), Vector2.new(270, 100))

--// Add Buttons
local function addButton(frame, text, callback)
    local btn = Instance.new("TextButton", frame)
    btn.Size = UDim2.new(1, -10, 0, 30)
    btn.Text = text
    btn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 14
    btn.BorderSizePixel = 0
    btn.MouseButton1Click:Connect(function() callback(btn) end)
end

--// Speed Boost
local speedEnabled = false
local function setSpeed(val)
    local char = LocalPlayer.Character
    if char and char:FindFirstChild("Humanoid") then
        char.Humanoid.WalkSpeed = val
    end
end

addButton(mainFrame, "Speed Boost", function(btn)
    speedEnabled = not speedEnabled
    btn.Text = "Speed Boost: " .. (speedEnabled and "ON" or "OFF")
    if speedEnabled then
        RunService.Stepped:Connect(function()
            if speedEnabled and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
                setSpeed(32)
            end
        end)
    else
        setSpeed(16)
    end
end)

--// Teleport Up / Down
addButton(mainFrame, "TP Up", function()
    local root = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
    if root then root.CFrame = root.CFrame + Vector3.new(0, 10, 0) end
end)

addButton(mainFrame, "TP Down", function()
    local root = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
    if root then root.CFrame = root.CFrame - Vector3.new(0, 10, 0) end
end)

--// ESP Setup
local mythics = {
    ["Frigo Camelo"] = true, ["Orangutini Ananassini"] = true, ["Rhino Toasterino"] = true,
    ["Bombardiro Crocodilo"] = true, ["Bombombini Gusini"] = true, ["Cavallo Virtuoso"] = true,
    ["Spioniro Golubiro"] = true, ["Zibra Zubra Zibralini"] = true, ["Tigrilini Watermelini"] = true,
}
local brainrots = {
    ["Cocofanto Elefanto"] = true, ["Girafa Celestre"] = true, ["Gattatino Neonino"] = true,
    ["Matteo"] = true, ["Tralalero Tralala"] = true, ["Espresso Signora"] = true,
    ["Odin Din Din Dun"] = true, ["Statutino Libertino"] = true, ["Trenostruzzo Turbo 3000"] = true,
    ["Ballerino Lololo"] = true, ["Tigroligre Frutonni"] = true, ["Orcalero Orcala"] = true,
}

local espToggles = {mythic = false, brainrot = false, player = false}

local function highlightModel(model, color)
    local h = Instance.new("Highlight", model)
    h.FillColor = color
    h.FillTransparency = 0.3
    h.OutlineColor = Color3.new(1, 1, 1)
    h.OutlineTransparency = 0.1
end

RunService.RenderStepped:Connect(function()
    for _, v in pairs(Workspace:GetChildren()) do
        if v:IsA("Model") and v:FindFirstChild("PrimaryPart") then
            if espToggles.mythic and mythics[v.Name] and not v:FindFirstChild("MythicESP") then
                highlightModel(v, Color3.fromRGB(0, 255, 255)).Name = "MythicESP"
            elseif espToggles.brainrot and brainrots[v.Name] and not v:FindFirstChild("BrainrotESP") then
                highlightModel(v, Color3.fromRGB(0, 0, 255)).Name = "BrainrotESP"
            end
        end
    end
    if espToggles.player then
        for _, p in pairs(Players:GetPlayers()) do
            if p ~= LocalPlayer and p.Character and not p.Character:FindFirstChild("PlayerESP") then
                highlightModel(p.Character, Color3.fromRGB(255, 255, 0)).Name = "PlayerESP"
            end
        end
    end
end)

addButton(mainFrame, "Toggle Mythic ESP", function(btn)
    espToggles.mythic = not espToggles.mythic
    btn.Text = "Mythic ESP: " .. (espToggles.mythic and "ON" or "OFF")
end)
addButton(mainFrame, "Toggle Brainrot ESP", function(btn)
    espToggles.brainrot = not espToggles.brainrot
    btn.Text = "Brainrot ESP: " .. (espToggles.brainrot and "ON" or "OFF")
end)
addButton(mainFrame, "Toggle Player ESP", function(btn)
    espToggles.player = not espToggles.player
    btn.Text = "Player ESP: " .. (espToggles.player and "ON" or "OFF")
end)

--// Discord Popup
local function createDiscordPopup()
    local popup = Instance.new("Frame", mainGui)
    popup.Size = UDim2.new(0, 200, 0, 100)
    popup.Position = UDim2.new(0.5, -100, 0.5, -50)
    popup.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    popup.BorderSizePixel = 0

    local close = Instance.new("TextButton", popup)
    close.Size = UDim2.new(0, 25, 0, 25)
    close.Position = UDim2.new(1, -25, 0, 0)
    close.Text = "X"
    close.BackgroundColor3 = Color3.fromRGB(60, 0, 0)
    close.TextColor3 = Color3.new(1, 1, 1)
    close.MouseButton1Click:Connect(function() popup:Destroy() end)

    local label = Instance.new("TextLabel", popup)
    label.Size = UDim2.new(1, 0, 1, -25)
    label.Position = UDim2.new(0, 0, 0, 25)
    label.BackgroundTransparency = 1
    label.TextColor3 = Color3.new(1, 1, 1)
    label.Text = "Discord invite copied to clipboard!"
    label.Font = Enum.Font.Gotham
    label.TextScaled = true
end

addButton(mainFrame, "Join Discord", function()
    setclipboard("https://discord.gg/brainrots")
    createDiscordPopup()
end)

--// Fling Button
addButton(flingFrame, "Fling to Corner", function()
    local root = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
    if root then
        root.Velocity = Vector3.new(5000, 5000, 5000)
        root.CFrame = CFrame.new(9999, 999, 9999)
    end
end)
