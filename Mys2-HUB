local flingGui = Instance.new("ScreenGui", game.CoreGui)
flingGui.Name = "Mys2FlingHub"

local flingFrame = Instance.new("Frame", flingGui)
flingFrame.Size = UDim2.new(0, 160, 0, 50)
flingFrame.Position = UDim2.new(0, 10, 1, -80)
flingFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
flingFrame.BorderSizePixel = 0
flingFrame.Active = true
flingFrame.Draggable = true

local flingTitle = Instance.new("TextLabel", flingFrame)
flingTitle.Size = UDim2.new(1, 0, 0, 20)
flingTitle.Position = UDim2.new(0, 0, 0, 0)
flingTitle.Text = "Mys2 Fling Hub"
flingTitle.TextColor3 = Color3.fromRGB(255, 255, 255)
flingTitle.BackgroundTransparency = 1
flingTitle.Font = Enum.Font.GothamBold
flingTitle.TextScaled = true

local flingBtn = Instance.new("TextButton", flingFrame)
flingBtn.Size = UDim2.new(1, -10, 0, 25)
flingBtn.Position = UDim2.new(0, 5, 0, 22)
flingBtn.Text = "Fling to Corner"
flingBtn.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
flingBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
flingBtn.BorderSizePixel = 0
flingBtn.Font = Enum.Font.GothamBold
flingBtn.TextScaled = true

flingBtn.MouseButton1Click:Connect(function()
    local root = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
    if root then
        root.Velocity = Vector3.new(999, 999, 999)
        root.CFrame = CFrame.new(9999, 999, 9999)
    end
end)

